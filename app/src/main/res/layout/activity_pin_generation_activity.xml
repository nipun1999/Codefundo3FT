<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".Activity.Pin_generation_activity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:layout_width="185dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/key"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:fontFamily="@font/ralewaymedium"
        android:layout_marginTop="30dp"
        android:text="Please Enter 6 digit PIN"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/otp1EdtTxt"
            android:inputType="numberPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="1"
            android:textSize="30dp"
            android:fontFamily="@font/ralewaysemibold"/>

        <EditText
            android:id="@+id/otp2EdtTxt"
            android:inputType="numberPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:maxLength="1"
            android:fontFamily="@font/ralewaysemibold"/>

        <EditText
            android:id="@+id/otp3EdtTxt"
            android:inputType="numberPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:maxLength="1"
            android:fontFamily="@font/ralewaysemibold"/>

        <EditText
            android:id="@+id/otp4EdtTxt"
            android:inputType="numberPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:maxLength="1"
            android:fontFamily="@font/ralewaysemibold"/>

        <EditText
            android:id="@+id/otp5EdtTxt"
            android:inputType="numberPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="1"
            android:textSize="30dp"
            android:fontFamily="@font/ralewaysemibold"/>

        <EditText
            android:id="@+id/otp6EdtTxt"
            android:inputType="numberPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:maxLength="1"
            android:fontFamily="@font/ralewaysemibold"/>


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:fontFamily="@font/ralewaymedium"
        android:layout_marginTop="20dp"
        android:text="Please Re-enter 6 digit PIN"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/otp1ReEdtTxt"
            android:inputType="numberPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="1"
            android:textSize="30dp"
            android:fontFamily="@font/ralewaysemibold"/>

        <EditText
            android:id="@+id/otp2ReEdtTxt"
            android:inputType="numberPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:maxLength="1"
            android:fontFamily="@font/ralewaysemibold"/>

        <EditText
            android:id="@+id/otp3ReEdtTxt"
            android:inputType="numberPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:maxLength="1"
            android:fontFamily="@font/ralewaysemibold"/>

        <EditText
            android:id="@+id/otp4ReEdtTxt"
            android:inputType="numberPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:maxLength="1"
            android:fontFamily="@font/ralewaysemibold"/>

        <EditText
            android:id="@+id/otp5ReEdtTxt"
            android:inputType="numberPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="1"
            android:textSize="30dp"
            android:fontFamily="@font/ralewaysemibold"/>

        <EditText
            android:id="@+id/otp6ReEdtTxt"
            android:inputType="numberPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:maxLength="1"
            android:fontFamily="@font/ralewaysemibold"/>


    </LinearLayout>


    <Button
        android:id="@+id/getStartedBtn"
        android:layout_width="302dp"
        android:layout_height="54dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="REGISTER"
        android:fontFamily="@font/ralewaysemibold"
        android:textSize="24dp"
        android:textColor="@android:color/white"
        android:background="@drawable/curved_pink_button"/>

</LinearLayout>