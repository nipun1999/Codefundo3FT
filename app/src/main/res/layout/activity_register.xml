<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".Activity.RegisterActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_marginTop="30dp"
        android:textSize="24dp"
        android:fontFamily="@font/ralewaybold"
        android:textColor="@color/colorAccent"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/firstNameRegisterEdtTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="First Name"
        android:fontFamily="@font/ralewayregular"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/curved_register_edittext"/>


    <EditText
        android:id="@+id/lastNameRegisterEdtTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Last Name"
        android:fontFamily="@font/ralewayregular"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/curved_register_edittext"/>


    <EditText
        android:id="@+id/emailRegisterEdtTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Email (Outlook)"
        android:fontFamily="@font/ralewayregular"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/curved_register_edittext"/>


    <EditText
        android:id="@+id/mobileNumberEdtTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Mobile Number"
        android:fontFamily="@font/ralewayregular"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/curved_register_edittext"/>


    <EditText
        android:id="@+id/aadharNumberEdtTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Aadhar Number"
        android:fontFamily="@font/ralewayregular"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/curved_register_edittext"/>


    <Button
        android:id="@+id/registerBtn"
        android:layout_width="302dp"
        android:layout_height="54dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="REGISTER"
        android:fontFamily="@font/ralewaysemibold"
        android:textSize="24dp"
        android:textColor="@android:color/white"
        android:background="@drawable/curved_pink_button"/>

</LinearLayout>